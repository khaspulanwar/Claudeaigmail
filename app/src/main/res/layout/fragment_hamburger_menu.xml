<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#F0F4F0">

    <!-- Navigation Drawer Content -->
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <!-- Gmail Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gmail"
                android:textSize="22sp"
                android:textColor="#EA4335"
                android:textStyle="normal" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <View
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/profile_circle_small" />

        </LinearLayout>

        <!-- Scrollable Menu Items -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Primary Menu Items -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <!-- All Inboxes -->
                    <LinearLayout
                        android:id="@+id/menu_all_inbox"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="24dp"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_all_inbox"
                            android:layout_marginEnd="32dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spam"
                            android:textSize="14sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                    <!-- Trash -->
                    <LinearLayout
                        android:id="@+id/menu_trash"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="24dp"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_trash"
                            android:layout_marginEnd="32dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sampah"
                            android:textSize="14sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Google Apps Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp">

                    <!-- Section Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aplikasi Google"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="8dp" />

                    <!-- Calendar -->
                    <LinearLayout
                        android:id="@+id/menu_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="24dp"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"
                            android:layout_marginEnd="32dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kalender"
                            android:textSize="14sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                    <!-- Contacts -->
                    <LinearLayout
                        android:id="@+id/menu_contacts"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="24dp"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_contacts"
                            android:layout_marginEnd="32dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kontak"
                            android:textSize="14sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                    <!-- Settings -->
                    <LinearLayout
                        android:id="@+id/menu_settings"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="24dp"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_settings"
                            android:layout_marginEnd="32dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Setelan"
                            android:textSize="14sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                    <!-- Help & Feedback -->
                    <LinearLayout
                        android:id="@+id/menu_help"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="24dp"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_help"
                            android:layout_marginEnd="32dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bantuan_masukan"
                            android:textSize="14sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Semi-transparent background -->
    <View
        android:id="@+id/navigation_drawer_background"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#80000000" />

</LinearLayout>