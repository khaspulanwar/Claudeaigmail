<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#F0F4F0">

    <!-- Semi-transparent background -->
    <View
        android:id="@+id/profile_menu_background"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#80000000" />

    <!-- Profile Menu Content -->
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingTop="24dp">

        <!-- Profile Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="16dp">

            <!-- Email Address -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="andaydia463@gmail.com"
                android:textSize="16sp"
                android:textColor="#333333" />

            <!-- Close Button -->
            <ImageView
                android:id="@+id/profile_close_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Profile Picture Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp">

            <!-- Profile Image -->
            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/profile_picture_large"
                android:layout_marginBottom="16dp" />

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anday Dia yang terhormat,"
                android:textSize="20sp"
                android:textColor="#333333"
                android:textStyle="normal"
                android:layout_marginBottom="12dp" />

            <!-- Manage Google Account Button -->
            <TextView
                android:id="@+id/manage_account_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelola Akun Google Anda"
                android:textSize="14sp"
                android:textColor="#1976D2"
                android:background="@drawable/manage_account_button"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Action Recommendations -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/recommendation_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_warning"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tindakan yang disarankan"
                    android:textSize="14sp"
                    android:textColor="#333333" />

            </LinearLayout>

        </LinearLayout>

        <!-- Account Switcher -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:paddingVertical="16dp">

            <!-- Switch Account Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ganti akun"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_expand_up" />

            </LinearLayout>

            <!-- Other Account -->
            <LinearLayout
                android:id="@+id/other_account_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:background="?android:attr/selectableItemBackground">

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/profile_ria"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Iandi Ria"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="andidia62@gmail.com"
                        android:textSize="12sp"
                        android:textColor="#666666" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99+"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <!-- Add Account -->
            <LinearLayout
                android:id="@+id/add_account_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp"
                android:paddingVertical="16dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_add_account"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambahkan akun lainnya"
                    android:textSize="14sp"
                    android:textColor="#333333" />

            </LinearLayout>

            <!-- Manage Account -->
            <LinearLayout
                android:id="@+id/manage_accounts_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp"
                android:paddingVertical="16dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_manage_accounts"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelola akun di perangkat ini"
                    android:textSize="14sp"
                    android:textColor="#333333" />

            </LinearLayout>

        </LinearLayout>

        <!-- Storage Info -->
        <LinearLayout
            android:id="@+id/storage_info_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="20dp"
            android:background="#F9F9F9">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_storage"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="79% dari 15 GB digunakan"
                android:textSize="14sp"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- Bottom Links -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp">

            <TextView
                android:id="@+id/privacy_policy_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kebijakan Privasi"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginEnd="16dp" />

            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/dot_separator"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/terms_of_service_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Persyaratan Layanan"
                android:textSize="12sp"
                android:textColor="#666666" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>